<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.toastexample.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/aboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="displayToastMsg"
                android:text="About ME"
                tools:layout_editor_absoluteX="149dp"
                tools:layout_editor_absoluteY="205dp" />

            <Button
                android:id="@+id/clicky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clicky Clicky" />

            <Button
                android:id="@+id/linkCollector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link Collector" />

            <Button
                android:id="@+id/Locator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locator" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/pressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>